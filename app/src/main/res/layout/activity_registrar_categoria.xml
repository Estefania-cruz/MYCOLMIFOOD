<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.registrarCategoria.registrarCategoriaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Categoria"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_margin="30dp"
            android:gravity="center"
            android:id="@+id/textinicio"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:layout_below="@+id/textinicio"
            android:background="@drawable/style_borde"
            android:hint="Nombre"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_margin="80dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_baseline_person"
            android:drawablePadding="50dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/registrarCbtn"
                    android:backgroundTint="@color/teal_800"
                    android:text="Registrar"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="40dp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/menubtn"
                    android:backgroundTint="@color/teal_800"
                    android:text="Menu"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="40dp"
                    android:padding="10dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    </ScrollView>


</RelativeLayout>